<span tal:omit-tag="">
    <input type="text"
           name="${name}"
           value="${cstruct}" 
           tal:attributes="size size;
                           class css_class"
           id="${oid}"/>
    <script type="text/javascript">
      deform.addCallback(
        '${oid}',
        function(oid) {
            $('#' + oid).datetimepicker(${options});
        }
      );
    </script>
</span>
