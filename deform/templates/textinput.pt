<span tal:omit-tag="">
    <input type="text" name="${name}" value="${cstruct}" 
           tal:attributes="size size;
                           class css_class"
           id="${oid}"/>
    <script tal:condition="mask" type="text/javascript">
      deform.addCallback(
         '${oid}',
         function (oid) {
            $("#" + oid).mask("${mask}", 
                              {placeholder:"${mask_placeholder}"});
         });
    </script>
</span>
