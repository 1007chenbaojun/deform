<span tal:omit-tag="">
    <input type="date"
           name="${field.name}"
           value="${cstruct}" 
           tal:attributes="size field.widget.size;
                           class field.widget.css_class"
           id="${field.oid}"/>
    <script type="text/javascript">
      deform.addCallback(
        '${field.oid}',
        function(oid) {
            $('#' + oid).dateinput({format: 'yyyy-mm-dd'});
        }
      );
    </script>
</span>
