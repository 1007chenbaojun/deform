<span tal:omit-tag="">
    <input type="date"
           name="${name}"
           value="${cstruct}"
           tal:attributes="size size;
                           class css_class"
           id="${oid}"/>
    <script type="text/javascript">
      deform.addCallback(
        '${oid}',
        function(oid) {
        $('#' + oid).datepicker(${options});
        }
      );
    </script>
</span>
