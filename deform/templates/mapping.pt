<fieldset>
  <!-- mapping.html -->
  <legend tal:condition="widget.title">${widget.title}</legend>
  <ul>
    <li class="section" tal:condition="widget.description">
      <div>${widget.description}</div>
    </li>
    <input type="hidden" name="__start__" value="${widget.name}:mapping"/>
    <div
       tal:define="rndr widget.renderer;
                   tmpl widget.item_template"
       tal:repeat="w widget.widgets"
       tal:replace="structure rndr(tmpl,widget=w,cstruct=cstruct.get(w.name))"/>
    <input type="hidden" name="__end__" value="${widget.name}:mapping"/>
  </ul>
</fieldset>
