<span i18n:domain="deform"
      tal:omit-tag=""
      tal:define="oid oid|field.oid;
                  name name|field.name;
                  size size|field.widget.size;
                  css_class css_class|field.widget.css_class">
${field.start_mapping()}

<div class="row">
    <div class="col-xs-12">
        <div class="input-group col-xs-4">
          <span class="input-group-addon" i18n:translate="">Year</span>
          <input type="text" name="year" value="${year}"
                 class="span1 form-control ${css_class}"
                 placeholder="year"
                 tal:attributes="size size; maxlength size"
                 id="${oid}"/>
        </div>
        <div class="input-group col-xs-4">
          <span class="input-group-addon" i18n:translate="">Month</span>
          <input type="text" name="month" value="${month}" class="span1 form-control ${css_class}"
                 placeholder="month"
                 tal:attributes="size size; maxlength size"
                 id="${oid}-month"/>
        </div>
        <div class="input-group col-xs-4">
          <span class="input-group-addon" i18n:translate="">Day</span>
          <input type="text" name="day" value="${day}"
                 placeholder="day"
                 class="span1 form-control ${css_class}"
                 tal:attributes="size size; maxlength size"
                 id="${oid}-day"/>
        </div>
    </div>
</div>
${field.end_mapping()}
</span>
