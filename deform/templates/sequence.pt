<div class="dfSeq"
     tal:define="rndr field.renderer;
                 tmpl field.widget.item_template">
  <!-- sequence -->

  ${field.title}
  <input type="hidden" name="__start__" value="${field.name}:sequence"
         class="dfProto" 
         tal:attributes="prototype field.widget.prototype(field)"/>

  <a href="#"
     class="dfSeqAdd"
     title="Add new ${field.title}"
     onclick="javascript:
              dfAddNewItem($(this).parent().children('.dfProto')[0],
              $(this).parent().children('.dfInsertBefore')[0]);
              return false;">
    <small>(add)</small>
  </a>

  <div tal:repeat="tup subfields"
       tal:content="structure rndr(tmpl, field=tup[1], cstruct=tup[0])"/>

  <span class="dfInsertBefore"/>
  
  <input type="hidden" name="__end__" value="${field.name}:sequence"/>
  <!-- /sequence -->
</div>
