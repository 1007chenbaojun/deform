<li tal:attributes="class field.error and field.widget.error_class"
    title="${field.description}">
  <!-- sequence_item -->
  <label class="desc"
         for="${field.oid}"
         title="${field.description}"
         >${field.title}<span tal:condition="field.required" class="req"
                               >*</span>
    <img class="dfClosebutton" 
         src="${field.widget.static_url}/images/close.png" 
         alt="Remove" onclick="javascript:$(this).parent().parent().remove();"/>

  </label>
  <span tal:replace="structure field.widget.serialize(field, cstruct)"/>
  <p tal:condition="field.error and not field.widget.hidden"
     class="error">${field.error.msg}</p>
  <!-- /sequence_item -->
</li>
