<li tal:attributes="class widget.error and widget.error_class">
  <!-- sequence_item.html -->
  <span onclick="javascript:remove_parent(this);" title="Remove">X</span>
  <label tal:condition="not widget.hidden"
         class="desc"
         for="${widget.name}"
         >${widget.title}<span tal:condition="widget.required" class="req"
                               >*</span>
  </label>
  <span tal:replace="structure widget.serialize(cstruct)"/>
  <p tal:condition="widget.description and not widget.hidden" 
     class="instruct">
    <small>${widget.description}</small>
  </p>
  <p tal:condition="widget.error and not widget.hidden" class="error"
     >${widget.error.msg}</p>
</li>
